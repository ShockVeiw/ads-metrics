doctype html
html(lang='en')
 head
   title Ads Metrics
   meta(charset='utf-8')
   meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
   link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
   link(rel='stylesheet' type='text/css' href='style.css')
 body
    table.table
        thead.thead-dark
            tr.tr-head
                th(scope='col') Keyword
                th(scope='col') Impressions
                th(scope='col') Orders
                th(scope='col') 
                th(scope='col') 
                    .dropdown
                        button#dropdownMenu2.btn.btn-secondary.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                            | Filters
                        .dropdown-menu(aria-labelledby='dropdownMenu2')
                            button.dropdown-item(type='button' onclick='showAll()') Show all
                            button.dropdown-item(type='button' onclick='showOnlyLikedAdMetrics()') Show only liked
                            button.dropdown-item(type='button' onclick='showOnlyDislikedAdMetrics()') Show only disliked
                            button.dropdown-item(type='button' onclick='showOnlyUnratedAdMetrics()') Show only unrated

        tbody
            each adMetric in adMetrics
                include components/ad-metric-row
